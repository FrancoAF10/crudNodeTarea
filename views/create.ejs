    <section class="container">
        <form action="/save" method="post" autocomplete="off">
            <div class="card">
                <div class="card-header">
                    <a href="./" class="btn btn-sm btn-primary">Mostrar Lista</a>
                </div>
                <div class="card-body">
                    <div class="mb-3 form-floating">
                        <input type="text" class="form-control" id="titulo" name="titulo" autofocus>
                        <label for="form-label">Titulo</label>
                    </div>
                    <div class="mb-3 form-floating">
                        <input type="text" class="form-control" id="autor" name="autor" autofocus>
                        <label for="form-label">Autor</label>
                    </div>
                    <div class="mb-3 form-floating">
                        <select name="genero" id="genero" class="form-select">
                            <option value="">Seleccionar Genero</option>
                            <option value="Biografia">Biografia</option>
                            <option value="Poesia">Poesia</option>
                            <option value="Drama">Drama</option>
                            <option value="Cuento">Cuento</option>
                            <option value="Fabula">Fabula</option>
                        </select>
                        <label for="form-label">Genero</label>
                    </div>
                    <div class="mb-3 form-floating">
                        <input type="date" class="form-control" id="fechaPublicacion" name="fechaPublicacion" autofocus>
                        <label for="form-label">Fecha Publicaci√≥n</label>
                    </div>
                    <div class="mb-3 form-floating">
                        <input type="text" class="form-control" id="isbn" name="isbn" autofocus>
                        <label for="form-label">ISBN</label>
                    </div>
                    <div class="mb-3 form-floating">
                        <select name="disponible" id="disponible" class="form-select">
                            <option value="">Disponibilidad</option>
                            <option value="1">Disponible</option>
                            <option value="2">No Disponible</option>
                        </select>
                        <label for="form-label">Disponibilidad</label>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <button class="btn btn-sm btn-primary" type="submit">Guardar</button>
                    <a href="/">Cancelar</a>
                </div>
            </div>
        </form>
    </section>
